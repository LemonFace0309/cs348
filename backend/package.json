{
  "name": "backend",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./ -o ./build && yarn copyfiles:graphql",
    "copyfiles:graphql": "copyfiles -V src/**/*.graphql build/",
    "clean": "rm -rf build",
    "dev": "nodemon",
    "start": "node -r tsconfig-paths/register -r ts-node ./build/src",
    "lint": "eslint src --fix",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "apollo-server": "^3.6.4",
    "apollo-server-core": "^3.6.4",
    "apollo-server-express": "^3.6.4",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "graphql": "^16.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-mongodb": "2.3.6",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@graphql-codegen/typescript-resolvers": "2.6.1",
    "@graphql-eslint/eslint-plugin": "^3.9.1",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.19",
    "copyfiles": "^2.4.1",
    "eslint": "^8.9.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.14.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.5"
  }
}
